{
	"Import": {
		"prefix": "import",
		"body": ["const ${1} = @import(\"${1}\")"],
		"description": "Importing Librarys"
	},
	"CImport": {
		"prefix": "cimport",
		"body": [
			"const c = @cImport({",
				"@cDefine(\"${1}\")",
				"});"
		],
		"description": "Importing C Header Files"
	},
	"buildExe": {
		"prefix": "bExe",
		"body": [
			"const exe = b.addExecutable(.{",
			"\t.name = \"${1}\",",
			"\t.root_source_file = b.path(\"${2: path}\"),",
			"\t.target = target,",
			"\t.optimize = optimize,",
			"});",
			"\n\n\nb.installArtifact(exe);"
		],
		"description": "Building an exe"
	}
}
