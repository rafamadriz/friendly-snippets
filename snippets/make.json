{
    "help": {
        "prefix": "help",
        "body": [
            "help: ## Prints help for targets with comments",
            "\t@awk 'BEGIN {FS = \":.*##\"; printf \"\\nUsage:\\n  make \\033[36m<target>\\033[0m\\n\"} /^[a-zA-Z_0-9-]+:.*?##/ { printf \"  \\033[36m%-15s\\033[0m %s\\n\", $\\$1, $\\$2 } /^##@/ { printf \"\\n\\033[1m%s\\033[0m\\n\", substr($\\$0, 5) } ' $(MAKEFILE_LIST)"
        ],
        "description": "help target for self-documented Makefile"
    },
    "if statement": {
        "prefix": "if",
        "body": ["ifeq (${1:cond0}, ${2:cond1})", "\t$0", "endif"],
        "description": "if statement"
    },
    "print": {
        "prefix": "print",
        "body": ["print-%: ; @echo $*=$($*)"],
        "description": "print"
    },
    "if else statement": {
        "prefix": "ife",
        "body": [
            "ifeq (${1:cond0}, ${2:cond1})",
            "\t$3",
            "else",
            "\t$4",
            "endif"
        ],
        "description": "if else statement"
    },
    "else": {
        "prefix": "el",
        "body": ["else", "\t$0"],
        "description": "else"
    }
}
